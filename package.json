{
  "name": "webapp-template",
  "description": "A preconfigured template for Snowpack with React, TypeScript, TailwindCSS, along with Linting, dependency upgrades and PR checks",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/JTKBowers/webapp-template",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "check-format": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "web-test-runner \"src/**/*.test.tsx\""
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/react": "^12.0.0",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^9.0.0",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.3",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/test-runner": "^0.13.16",
    "autoprefixer": "^10.3.3",
    "chai": "^4.3.4",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.3.6",
    "prettier": "^2.2.1",
    "snowpack": "^3.8.8",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.4.2"
  }
}
